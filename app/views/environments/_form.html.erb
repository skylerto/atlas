<%= form_for(@environment, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @environment.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@environment.errors.count, "error") %> prohibited this environment from being saved:</h4>

      <ul>
      <% @environment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :version, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :version, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :services, class: "col-sm-2 control-label" %>
    <div class="col-sm-10" id="services_select">
      <%= select_tag 'services', job_options(@all_jobs, @jobs).html_safe, multiple: true, class: 'selectpicker' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
